<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SingleNewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/imageview_container"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageview_new_single"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_videogame_asset_black_24dp"
                    android:background="@android:color/holo_blue_dark"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:id="@+id/text_category_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_float_text"
                    android:text="Categoria"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/text_titulo_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITULO DE NOTICIA"
                android:textSize="24sp"
                android:textColor="@color/colorPrincipalText"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_date_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Noticia"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                />
            <ScrollView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_body_new_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuerpo de noticia"
                    android:textSize="18sp"
                    android:textColor="@color/colorSecondaryText"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fav_single"
        app:layout_anchor="@id/imageview_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginRight="8dp"
        app:fabSize="normal"
        android:src="@drawable/ic_favorite_white"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>